@using Marketplace.Models;
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "All user";
    Layout = "_Layout";

    var users = ViewData["AllUsers"] as List<User>;
}
<div class="container">
    <div class="row mt-5">
        <div class="col-md-6">
            <h1>Users</h1>
            <div>
                <table class="table table-hover table-bordered">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Money</th>
                            <th>Items</th>
                            
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in users)
                        {
                            <tr>
                                <td>@user.Id</td>
                                <td>@user.UserName</td>
                                <td>@user.Email</td>
                                <td>@user.Money</td>
                                <td>
                                    <div class="d-flex">
                                        <a class="btn btn-outline-primary" href="/admin/edit/@user.Id">AddMoney</a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                <a class="btn btn-outline-primary" href="/">Back</a>
            </div>
        </div>
    </div>
</div>