@using Marketplace.Models;
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
	ViewData["Title"] = "PayOrder";
	Layout = "_Layout";
}
@model PayOrder
<div class="container">
	<div class="row mt-5">
		<div class="col-md-4">
			<div class="card">
				<div class="card-header">
					<h1 class="card-title">Pay order</h1>
				</div>
				<div class="card-body">
					<form method="post" enctype="multipart/form-data">

						<div class="mb-3">
							@Html.LabelFor(m => m.Price, new {@class = "form-label"})
							@Html.TextBoxFor(m => m.Price, new {@class = "form-control", placeholder = "Input Price..."})
							@Html.ValidationMessageFor(m => m.Price)
						</div>

						<button type="submit"  class="btn btn-success">Save</button>
						<a href="/item/index" class="btn btn-outline-info">Return</a>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>

