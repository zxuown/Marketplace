@using Marketplace.Models;
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "Index order";
    Layout = "_Layout";
}
@model List<Order>
<div class="container">
    <div class="row mt-5">
        <div class="col-md-6">
            <h1>Orders</h1>
            <div>
                <table class="table table-hover table-bordered">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Name</th>
                            <th>SecondName</th>
                            <th>Email</th>
                            <th>City</th>
                            <th>WareHouse</th>
                            <th>Phone</th>
                            <th>Item</th>
                            <th>Order</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var order in Model)
                        {
                            <tr>
                                <td>@order.Id</td>
                                <td>@order.Name</td>
                                <td>@order.SecondName</td>
                                <td>@order.Email</td>
                                <td>@order.City</td>
                                <td>@order.WareHouse</td>
                                <td>@order.Phone</td>
                                <td>@order.Item?.Title</td> 
                                <td>@order.Status</td>
                                <td>
                                    <div class="d-flex">
                                        <a class="btn btn-outline-primary" href="/order/edit/@order.Id">Edit</a>
                                        <form method="post" action="/order/delete/@order.Id">
                                            <button class="btn btn-outline-warning">Delete</button>
                                        </form>
                                    </div>
                                  
                                </td>
                            </tr>
                        }   
                    </tbody>
                </table>
                <a class="btn btn-outline-primary" href="/">Back</a>
            </div>
        </div>
    </div>
</div>


